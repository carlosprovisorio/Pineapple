<!DOCTYPE html>
<html>
  <head>
    <title>Pineapple</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'https://s3.ca-central-1.amazonaws.com/pineappleapplication/favicon32.png' %>
  </head>

  <body>
		<nav class="navbar navbar-default navbar-static-top" role="navigation">
			<div class='container'>
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<%= link_to root_path do %>
						<%= image_tag "https://s3.ca-central-1.amazonaws.com/pineappleapplication/logo.svg", class: "logo" %>
					<% end %>
				</div>
				<div class="collapse navbar-collapse" id="main-nav-collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><%= link_to "Home", root_path %></li>
						<li><%= link_to "Resume", resume_path %></li>
						<li><%= link_to "Portfolio", "#portfolio" %></li>
						<li><%= link_to "Contact", new_contact_path %></li>
            <!--<li><%= link_to "Resources", resources_path %></li>-->
					</ul>
				</div><!-- /.navbar-collapse -->
			</div>
    </nav>
    <div class="container">
      <% flash.each do |key, value| %>
        <%= content_tag :div, value, class: "alert alert-#{key}" %>
      <% end %>
    </div>

    <%= yield %>
    <footer>
        Made by <a href="#">@CARLOS FERREIRA</a>
    </footer>
  </body>
</html>
