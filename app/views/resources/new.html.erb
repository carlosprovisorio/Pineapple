<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for @resource do |f| %>
      <div class="form-group">
        <%= f.label :Resource %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
      <%= f.submit 'Submit', class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
