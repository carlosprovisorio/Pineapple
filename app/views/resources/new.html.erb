<div class="row">
  <div class="resources-section">
    <div class="resources-section__header text-center">
      <h3>Add New Resource</h3>
    </div>

    <div class="col-md-4 col-md-offset-4">
      <%= form_for(@resource, html: { multipart: true }) do |f| %>
        <div class="form-group">
          <%= f.label :Resource %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>

        <span class="picture">
          <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png'%>
        </span>
        <%= f.submit 'Submit', class: 'resources-section__button' %>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
$('#resource_picture').bind('change', function() {
  size_in_mb = this.files[0].size/1024/1024;
  if (size_in_mb > 1) {
    alert('Maximum file size is 1MB. Please choose a smaller file');
  }
});
</script>
