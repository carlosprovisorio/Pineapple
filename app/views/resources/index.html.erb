<div class="row">
  <div class="resources-section text-center">
    <div class="resources-section__header text-center">
      <h1>Resources</h1>
      
      <% @resources.each do |resource| %>
        <div class="row">

          <div class="col-md-4">
            <%= image_tag(resource.picture, size: "60x60", class: "gravatar") if resource.picture? %>
          </div>

          <div class="col-md-2">
            <section class="center">
              <h5>Name: <%= resource.name %></h5>
            </section>
          </div>

          <div class="col-lg-6">
            <h4><%= resource.description %></h4>
          </div>
        </div>
      <% end %>
    </div>
      <%= link_to "Add New Resource", new_resource_path, class: "resources-section__button" %>
  </div>
</div>
